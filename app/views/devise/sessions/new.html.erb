<div id="login" class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2 class="center">Ingresa</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, label: "Contraseña", required: false %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Ingresa", class: "btn-login btn-full" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row call-to">
    <div class="col-sm-6 col-sm-offset-3">
      <h3 class="center">¿No has creado una cuenta?</h3>
      <%= link_to "Regístrate", register_path, class: "btn btn-default btn-full" %>
    </div>
  </div>

</div>
