<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>WW2015</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav id="main-nav" class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag("logo-nav.png", class: "img-responsive logo-nav"), root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="nav-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Ponentes", ponentes_path %></li>
          <li><%= link_to "Agenda", agenda_path %></li>
          <li><%= link_to "Showrooms", showrooms_path %></li>
          <li><%= link_to "Banamex", banamex_path %></li>
          <li><%= link_to "2014", last_year_path %></li>
          <% if user_signed_in? %>
              <li><%= link_to "Mis Eventos", edit_user_registration_path %></li>
              <li><%= link_to "Log Out", logout_path, class: "btn btn-success" %></li>
            <% else %>
              <!--<li><%= link_to "RegÃ­strate", register_path, class: "btn btn-success" %></li> -->
            <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <div class="container">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p><%= notice %></p>
      </div>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <div class="container">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p><%= alert %></p>
      </div>
    </div>
  <% end %>


  <%= yield %>

  <footer>
    <div class="container">
      <div class="row">
        <%= link_to image_tag("logo-nav.png", class: "img-responsive logo-nav"), root_path, class: "logo-footer" %>
        <a href="https://twitter.com/womensweekendmx" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
        <a href="https://www.facebook.com/womensweekendmx" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>
      </div>
    </div>
  </footer>

</body>
</html>
