<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :limit %>
    <%= f.input :limit_banamex %>
    <%= f.input :slot %>
    <%= f.input :time %>
    <%= f.input :day_id, collection: Day.all, label_method: :name %>
    <%= f.input :speaker_id, collection: Speaker.all, label_method: :full_name %>
    <%= f.input :location_id, collection: Location.all, label_method: :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
