<div class="admin container">
  <table class="table table-striped">
    <thead>
      <tr>
        <td>Eventos</td>
        <td>Día</td>
        <td>Hora</td>
        <td>Salón</td>
        <td>Speaker</td>
      </tr>
    </thead>
    
    <tbody>
    <% @events.order('slot ASC').each do |event| %>
      <tr>
        <td>
          <%= link_to event.name, event_path(event) %>
        </td>
        <td><%= event.day.name %></td>
        <td><%= event.time %></td>
        <% if event.location != nil %>
          <td><%= event.location.name %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <td><%= event.speaker.full_name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>