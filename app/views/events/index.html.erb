          </div>

        </div>

        <div role="tabpanel" class="tab-pane" id="day2w">
        <% Day.find(2).workshops.order('slot ASC').each do |workshop| %>
          <div class="row event">
            <div class="col-xs-2 time">
              <div class="content">
                <p class="center"><%= workshop.time %></p>
              </div>
            </div>

            <div class="col-xs-10 info">
              <div class="content">
                <p class="center name"><%= workshop.title %></p>
                <p class="center speaker"><%= workshop.speaker.full_name %></p>
              </div>
            </div>
          </div>
        <% end %>
        </div>

        <div role="tabpanel" class="tab-pane" id="day3w">
        <% Day.find(3).workshops.order('slot ASC').each do |workshop| %>
          <div class="row event">
            <div class="col-xs-2 time">
              <div class="content">
