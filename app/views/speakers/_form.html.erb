<%= simple_form_for(@speaker) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% if @speaker.profile_image_id? %>
      <div class="form-group">
        <%= attachment_image_tag(@speaker, :profile_image, :fill, 150, 150, class: "img-responsive") %>
        <%= f.check_box :remove_profile_image %>
        <%= f.label "Remove Profile Image" %>
      </div>
    <% end %>
    <%= f.attachment_field :profile_image %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :category_id, collection: Category.all, label_method: :name %>
    <%= f.input :description %>
    <%= f.input :bio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
