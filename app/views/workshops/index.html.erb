<div class="admin container">
  <table class="table table-striped">
    <thead>
      <tr>
        <td>Workshops</td>
        <td>Día</td>
        <td>Hora</td>
        <td>Salón</td>
        <td>Speaker</td>
      </tr>
    </thead>
    
    <tbody>
    <% @workshops.order('slot ASC').each do |workshop| %>
      <tr>
        <td>
          <%= link_to workshop.title, workshop_path(workshop) %>
        </td>
        <td><%= workshop.day.name %></td>
        <td><%= workshop.time %></td>
        <% if workshop.location != nil %>
          <td><%= workshop.location.name %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <td><%= workshop.speaker.full_name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>