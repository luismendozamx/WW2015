  <div><%= hidden_field_tag :workshop_id, @workshop.id %></div>
  <div class="center">
    <%= f.submit "Eliminar Lista de Espera", class: "btn btn-default btn-registro btn-delete", data: { disable_with: "Guardando..." } %>
  </div>
<% end %>