<% if user_signed_in? %>
  <div class="subscribe-form" id="event-<%= @event.id %>">
    <% if current_user.event_subscribed?(@event) %>
      <%= render 'shared/leave_event_button' %>
    <% else %>
      <% if current_user.event_subscribed_list?(@event) %>
        <%= render 'shared/leave_event_list_button' %>
      <% elsif @event.can_register?(current_user) %>
        <%= render 'shared/register_event_button' %>
      <% else %>
        <%= render 'shared/register_event_list_button' %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <%= link_to "RegÃ­strate", register_path, class: "btn btn-default btn-registro" %>
<% end %>