<% if user_signed_in? %>
    <% if current_user.workshop_subscribed?(@workshop) %>
      <div id="workshop-box-<%= @workshop.id %>" class="info">
    <% else %>
      <div id="workshop-box-<%= @workshop.id %>" class="info">
    <% end %>
<% else %>
  <div id="workshop-box-<%= @workshop.id %>" class="info">
<% end %>

  <div class="content l-<%= @workshop.length %>">
    <p class="center time-w"><%= @workshop.time %></p>
    <a href="#workshop-modal-<%= @workshop.id %>" data-toggle="modal"><p class="center name"><%= @workshop.title %></p></a>
    <p class="center speaker"><%= @workshop.speaker.full_name %></p>
    <div class="button-workshop">
      <%= render 'shared/workshop_subscribe_form' %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="workshop-modal-<%= @workshop.id %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title center"><%= @workshop.title %></h4>
      </div>
      <div class="modal-body">
        <%= attachment_image_tag(@workshop.speaker, :profile_image, :fill, 150, 150, class: "img-responsive img-circle center speaker-profile") %>
        <p class="center"><%= @workshop.speaker.full_name %></p>
        <% if @workshop.description %>
          <p class="center"><%= @workshop.description %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->