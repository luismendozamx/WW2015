<%= simple_form_for(current_user.event_waiting_lists.find_by(event_id: @event.id), html: { method: :delete }, remote: true) do |f| %>
  <div><%= hidden_field_tag :event_id, @event.id %></div>
  <div class="center">
    <%= f.submit "Eliminar Lista de Espera", class: "btn btn-default btn-registro btn-delete", data: { disable_with: "Guardando..." } %>
  </div>
<% end %>